<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/androidmobile11"
    android:theme="@android:style/Theme.NoTitleBar">


    <Button
        android:text=""
        android:background="@android:color/transparent"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/btnChooseYaMood"

        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="From"
        android:fontFamily="Roboto"
        android:ems="10"
        android:layout_marginTop="186dp"
        android:background="@android:color/transparent"
        android:paddingTop="9dp"
        android:id="@+id/etFrom"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="To"
        android:fontFamily="Roboto"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        android:id="@+id/etTo"
        android:layout_below="@+id/etFrom"
        android:layout_alignLeft="@+id/etFrom"
        android:layout_alignStart="@+id/etFrom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="05/12/2016"
        android:fontFamily="Roboto"
        android:ems="10"
        android:background="@android:color/transparent"
        android:id="@+id/etDate"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/etTo"
        android:layout_alignLeft="@+id/etTo"
        android:layout_alignStart="@+id/etTo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Time"
        android:fontFamily="Roboto"
        android:ems="10"
        android:background="@android:color/transparent"
        android:id="@+id/etTime"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/etDate"
        android:layout_alignLeft="@+id/etDate"
        android:layout_alignStart="@+id/etDate" />

</RelativeLayout>
